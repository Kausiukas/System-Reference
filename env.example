# PostgreSQL Database Configuration
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=background_agents
POSTGRESQL_USER=your-db-username
POSTGRESQL_PASSWORD=your-db-password
POSTGRESQL_SSL_MODE=prefer
POSTGRESQL_POOL_SIZE=10
POSTGRESQL_MAX_OVERFLOW=20

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# LangSmith Configuration (Optional)
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=background-agents
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_TRACING=true

# Agent Configuration
HEARTBEAT_INTERVAL=60
PERFORMANCE_INTERVAL=120
AGENT_CLEANUP_INTERVAL=300
DEFAULT_MAX_RETRIES=3
DEFAULT_TIMEOUT=30

# Data retention settings
DATA_RETENTION_DAYS=30

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_DASHBOARD_PORT=8501
MONITORING_API_PORT=8000
MONITORING_LOG_LEVEL=INFO
MONITORING_ALERT_THRESHOLD=80
MONITORING_RETENTION_DAYS=30

# System Configuration
SYSTEM_ENVIRONMENT=development
SYSTEM_LOG_LEVEL=INFO
SYSTEM_DEBUG=false
SYSTEM_TIMEZONE=UTC
SYSTEM_MAX_WORKERS=4

# Security Configuration
SECURITY_SECRET_KEY=your-secret-key-here
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_ENABLE_CORS=true

# Dashboard Configuration
DASHBOARD_TITLE="Background Agents System"
DASHBOARD_THEME=light
DASHBOARD_AUTO_REFRESH=true
DASHBOARD_REFRESH_INTERVAL=30

# Email Configuration (Optional)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=system@yourcompany.com
EMAIL_PASSWORD=your-email-password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups

# Performance Tuning
PERFORMANCE_POOL_TIMEOUT=30
PERFORMANCE_POOL_RECYCLE=3600

# Feature Flags
FEATURE_AI_HELP=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_SELF_HEALING=true
FEATURE_LANGSMITH_INTEGRATION=true
FEATURE_ADVANCED_ANALYTICS=true 
